{
  "name": "obsidian-typewriter-mode",
  "version": "0.0.2",
  "description": "Typewriter scrolling, highlight of the current line, dimming of unfocused paragraphs and more",
  "main": "main.js",
  "scripts": {
    "lint": "eslint --fix --ext .js,.jsx,.ts,.tsx src",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,json,css,md}' './build.cjs' './version-bump.cjs'",
    "type-check": "tsc --noEmit",
    "check": "$npm_execpath run format && $npm_execpath run lint && $npm_execpath run type-check",
    "build": "./build.cjs",
    "clean": "rimraf main.js styles.css data.json",
    "version-bump": "./version-bump.cjs"
  },
  "keywords": [
    "obsidian",
    "typewriter"
  ],
  "author": "Davis Riedel",
  "repository": {
    "type": "git",
    "url": "https://github.com/davisriedel/obsidian-typewriter-mode"
  },
  "license": "MIT",
  "devDependencies": {
    "@codemirror/state": "^6.2.1",
    "@codemirror/view": "^6.16.0",
    "@types/codemirror": "^5.60.9",
    "@types/node": "^20.5.4",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "esbuild": "^0.19.2",
    "esbuild-node-externals": "^1.8.0",
    "esbuild-sass-plugin": "^2.12.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "obsidian": "^1.4.4",
    "prettier": "^3.0.2",
    "rimraf": "^5.0.1",
    "tslib": "^2.6.2",
    "typescript": "^5.1.6"
  }
}
