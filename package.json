{
  "name": "obsidian-typewriter-mode",
  "version": "0.0.1-beta.3",
  "description": "An Obsidian plugin for typewriter-style scrolling, which keeps the active line at a fixed position.",
  "main": "main.js",
  "scripts": {
    "lint": "eslint --fix --ext .js,.jsx,.ts,.tsx src",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,json,css,md}'",
    "type-check": "tsc --noEmit",
    "check": "$npm_execpath run format && $npm_execpath run lint && $npm_execpath run type-check",
    "build": "./build.cjs",
    "clean": "rimraf main.js styles.css data.json"
  },
  "keywords": [],
  "author": "Davis Riedel",
  "repository": {
    "type": "git",
    "url": "https://github.com/davisriedel/obsidian-typewriter-mode"
  },
  "license": "MIT",
  "devDependencies": {
    "@codemirror/state": "^6.2.0",
    "@codemirror/view": "^6.9.3",
    "@types/codemirror": "^5.60.7",
    "@types/node": "^14.14.16",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "esbuild": "^0.17.15",
    "esbuild-node-externals": "^1.7.0",
    "esbuild-sass-plugin": "^2.8.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "obsidian": "^0.14.6",
    "prettier": "^2.8.7",
    "rimraf": "^4.4.1",
    "tslib": "^2.5.0",
    "typescript": "^4.1.3"
  }
}
